@using Hotel.Authentication



<script type="text/javascript">
    //$(document).ready(function () {
    //    RegisterChange();
    //});

    function RegisterChange() {
        var result = confirm("Для доступа к сервису подтвердите запись в смене");
        if (result === false) {
            return false;
        }
        $.ajax({
            async: true,
            type: 'GET',
            dataType: 'JSON',
            contentType: 'application/json; charset=utf-8',
            //data: { ID: ID },
            url: '/Change/RegisterChange',
            success: function (data) {
                if (data.success === true) {
                    alert(data.message);

                }

            },
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                alert(err.Message);
            }

        });
    }
</script>

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Сервис гостиницы</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>



<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Сервис гостиницы", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {

                        var identity = ((CustomPrincipal)HttpContext.Current.User);

                        ViewBag.User = identity.Login;
                        @Html.Label(string.Format("Приветствуем, {0}", identity.FullName), new { style = "color:#ffffff" })
                        //Html.ActionLink(User.Identity.Name, "Index", "RegisterUsers")
                        if (identity.Roles.Contains("USER"))
                        {
                            <li>@Html.ActionLink("Информация", "About", "Home")</li>
                            <li>@Html.ActionLink("Связаться", "Contact", "Home")</li>

                            @*<li>@Html.ActionLink("Забронировать", "Index", "Booking")</li>*@
                            @*<li>@Html.ActionLink("Личный кабинет", "Index", "Client")</li>*@
                            <li>@Html.ActionLink("Выйти", "LogOut", "Account")</li>
                        }
                        else if (identity.Roles.Contains("CLEANER"))
                        {

                            <li>@Html.ActionLink("Журнал уборки", "Index", "Cleaner")</li>
                            @*<li>@Html.ActionLink("Личный кабинет", "Index", "Cleaning")</li>*@
                            <li>@Html.ActionLink("Выйти", "LogOut", "Account")</li>
                        }
                        else if (identity.Roles.Contains("MANAGER"))
                        {

                            <li>@Html.ActionLink("Сотрудники", "Index", "Actor")</li>
                            @*<li>@Html.ActionLink("Личный кабинет", "Index", "Manager")</li>*@
                            <li>@Html.ActionLink("Выйти", "LogOut", "Account")</li>
                        }
                        else if (identity.Roles.Contains("AGENT"))
                        {

                            <li>@Html.ActionLink("Комнаты", "Index", "Room")</li>
                            @*<li>@Html.ActionLink("Посетители", "ClientList", "Client")</li>*@
                            <li>@Html.ActionLink("Бронирование", "Index", "Booking")</li>
                            <li>@Html.ActionLink("Мероприятия", "Index", "Events")</li>
                            <li>@Html.ActionLink("Выйти", "LogOut", "Account")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Информация", "About", "Home")</li>
                        <li>@Html.ActionLink("Связаться", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Номера", "Rooms", "Home")</li>
                        <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                        <li>@Html.ActionLink("Регистрация", "Registration", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Сервис гостиницы</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/load-change.js"></script>
    <!--<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>-->
</body>
</html>
